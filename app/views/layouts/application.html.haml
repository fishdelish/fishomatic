!!! html5
%html
  %head
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  
  %body
    - if flash[:notice]
      #notice= flash[:notice]
    - if flash[:error]
      #errors= flash[:error]
    - unless current_user
      #signin
        = link_to "Facebook Signin", user_omniauth_authorize_path(:facebook)
        = link_to "Twitter Signin", user_omniauth_authorize_path(:twitter)
    =yield
